<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_nav"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--Header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:fontFamily=""
            android:text="Quản lý"
            android:textColor="#5D2E2E"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="15dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/btn_ql_taikhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản lý tài khoản"
            android:textColor="@color/textColorTitle"
            android:textSize="@dimen/textSize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:alpha="0.3"
            android:background="@color/textColorTitle" />

        <TextView
            android:id="@+id/btn_ql_monan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản lý món ăn"
            android:textColor="@color/textColorTitle"
            android:textSize="@dimen/textSize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:alpha="0.3"
            android:background="@color/textColorTitle" />

        <TextView
            android:id="@+id/btn_ql_ban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản lý bàn"
            android:textColor="@color/textColorTitle"
            android:textSize="@dimen/textSize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:alpha="0.3"
            android:background="@color/textColorTitle" />

        <TextView
            android:id="@+id/btn_ql_hoadon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản lý hóa đơn"
            android:textColor="@color/textColorTitle"
            android:textSize="@dimen/textSize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:alpha="0.3"
            android:background="@color/textColorTitle" />

        <TextView
            android:id="@+id/btn_thongke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thống kê"
            android:textColor="@color/textColorTitle"
            android:textSize="@dimen/textSize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:alpha="0.3"
            android:background="@color/textColorTitle" />

        <TextView
            android:id="@+id/btnlogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Đăng xuất"
            android:textColor="@color/textColorTitle"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>